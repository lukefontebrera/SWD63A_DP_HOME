@page "/basket"
@using SharedModels.Models
@inherits BasketItemsBase
@inject NavigationManager Navigation

@if (BasketItems == null)
{
    <h3>Loading Basket...</h3>
}
else
{
    <h3 class="mb-5">Basket</h3>

    @if (BasketItems.Any())
    {
        const int itemsPerRow = 3;
        var basketCount = BasketItems.Count();
        var basketRows = (int)Math.Ceiling((double)basketCount / itemsPerRow);

        @for (int i = 0; i < basketRows; i++)
        {
            var basketRowItems = BasketItems.Skip(i * itemsPerRow).Take(itemsPerRow);

            <div class="row mt-3">
                @foreach (var item in basketRowItems)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <img src="@item.PictureUri" class="card-img-top" alt="Product Image" style="max-width: 200px;">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">Unit Price: EUR @item.UnitPrice.ToString("0.00")</p>
                                <button type="button" class="btn btn-danger" @onclick="() => DeleteItem(item.Id)">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="mt-3">
            <h5>Total: EUR @(basketCount * 10)</h5>
            <button type="button" class="btn btn-success" @onclick="ProceedToPayment">
                Proceed to Payment
            </button>
        </div>
    }
    else
    {
        <p>Your basket is empty.</p>
    }
}

@code
{
    async Task ProceedToPayment()
    {
        Navigation.NavigateTo("/payment");
    }
}
