@page "/wishList"
@using SharedModels.Models
@inherits WishItemsBase

@if (WishedItems == null)
{
    <h3>Loading WishList...</h3>
}
else
{
    <h3 class="mb-5">Wish List</h3>

    @if (WishedItems.Any())
    {
        const int itemsPerRow = 3;
        var basketCount = WishedItems.Count();
        var basketRows = (int)Math.Ceiling((double)basketCount / itemsPerRow);

        @for (int i = 0; i < basketRows; i++)
        {
            var basketRowItems = WishedItems.Skip(i * itemsPerRow).Take(itemsPerRow);

            <div class="row mt-3">
                @foreach (var item in basketRowItems)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <img src="@item.PictureUri" class="card-img-top" alt="Product Image" width='150' height='300'>
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <button type="button" class="btn btn-danger" @onclick="() => DeleteItem(item.Id)">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <p>Your wish list is empty.</p>
    }
}